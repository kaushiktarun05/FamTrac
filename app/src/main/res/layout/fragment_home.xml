<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/darker_gray"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".HomeFragment">



    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/my_family"
        android:textColor="@color/black"
        android:textSize="32sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.card.MaterialCardView
        app:cardElevation="16dp"
        android:id="@+id/card_one"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_margin="16dp"
        app:cardBackgroundColor="#FFF"
        app:cardCornerRadius="16dp"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:layout_editor_absoluteX="16dp" >

        <ImageView
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:layout_margin="24dp"
            android:elevation="16dp"
            android:src="@drawable/ic_profilephoto" />

    </com.google.android.material.card.MaterialCardView>


    <com.google.android.material.card.MaterialCardView
        app:cardElevation="16dp"
        android:id="@+id/card_two"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_margin="16dp"
        app:cardBackgroundColor="#FFF"
        app:cardCornerRadius="16dp"
        app:layout_constraintTop_toBottomOf="@+id/card_one"
        tools:layout_editor_absoluteX="16dp" >

        <ImageView
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:layout_margin="24dp"
            android:elevation="16dp"
            android:src="@drawable/ic_profilephoto" />
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        app:cardElevation="16dp"
        android:id="@+id/card_three"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_margin="16dp"
        app:cardBackgroundColor="#FFF"
        app:cardCornerRadius="16dp"
        app:layout_constraintTop_toBottomOf="@+id/card_two"
        tools:layout_editor_absoluteX="16dp" >

        <ImageView
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:elevation="16dp"
            android:src="@drawable/ic_profilephoto"
            android:layout_margin="24dp"

            />
    </com.google.android.material.card.MaterialCardView>


    <ImageView
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:elevation="16dp"
        android:src="@drawable/ic_dots"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="16dp"
        />

    <ImageView
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_margin="16dp"
        android:elevation="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/ic_mapicon"
        />


</androidx.constraintlayout.widget.ConstraintLayout>
